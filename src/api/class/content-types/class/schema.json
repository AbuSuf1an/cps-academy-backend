{
  "kind": "collectionType",
  "collectionName": "classes",
  "info": {
    "singularName": "class",
    "pluralName": "classes",
    "displayName": "Class",
    "description": "A class contains video content and topics, belongs to a module"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "videoUrl": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "duration": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "isFreePreview": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 1
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "classes"
    },
    "topics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::topic.topic",
      "mappedBy": "class"
    }
  }
}
