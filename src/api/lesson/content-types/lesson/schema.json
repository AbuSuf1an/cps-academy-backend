{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson",
    "description": "A lesson contains reading material, practice problems, or assignments"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "duration": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["Easy", "Medium", "Hard"],
      "required": false,
      "default": "Medium"
    },
    "status": {
      "type": "enumeration",
      "enum": ["available", "upcoming", "finished"],
      "required": true,
      "default": "available"
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 1
    },
    "isCompleted": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "lessons"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files", "images"]
    }
  }
}