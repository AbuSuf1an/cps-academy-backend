{
  "kind": "collectionType",
  "collectionName": "classes",
  "info": {
    "singularName": "class",
    "pluralName": "classes",
    "displayName": "Class",
    "description": "A class contains video content and topics, belongs to a module"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "shortDescription": {
      "type": "text",
      "required": false,
      "maxLength": 500
    },
    "videoUrl": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "videoId": {
      "type": "string",
      "required": false,
      "maxLength": 255
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "duration": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": ["available", "upcoming", "finished"],
      "required": true,
      "default": "available"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["Easy", "Medium", "Hard"],
      "required": false,
      "default": "Medium"
    },
    "isFreePreview": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isCompleted": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 1
    },
    "watchTime": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "classes"
    },
    "topics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::topic.topic",
      "mappedBy": "class"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files", "images"]
    }
  }
}
